<style>
  .grid-pattern {
    background-image: 
      linear-gradient(rgba(34, 211, 238, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(34, 211, 238, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    height: 100%;
    width: 100%;
  }

  .circuit-lines {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    background: radial-gradient(circle at 20% 50%, rgba(34, 211, 238, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(16, 185, 129, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 80%, rgba(34, 211, 238, 0.1) 0%, transparent 50%);
  }

  .cyber-button {
    @apply px-6 py-3 bg-black border-2 border-cyan-500 text-cyan-400 font-mono tracking-wider transition-all duration-300 relative overflow-hidden;
    clip-path: polygon(0 0, calc(100% - 10px) 0, 100% 100%, 10px 100%);
  }

  .cyber-button:hover {
    @apply bg-cyan-900 bg-opacity-30 text-cyan-300;
    box-shadow: 0 0 20px rgba(34, 211, 238, 0.5);
  }

  .cyber-button-active {
    @apply bg-cyan-900 bg-opacity-50 text-cyan-200 border-cyan-400;
    box-shadow: 0 0 20px rgba(34, 211, 238, 0.3);
  }

  .cyber-main-button {
    @apply px-12 py-4 bg-gradient-to-r from-red-600 to-red-700 text-white font-bold text-xl font-mono tracking-widest border-2 border-red-400 transition-all duration-300 relative overflow-hidden;
    clip-path: polygon(10px 0, 100% 0, calc(100% - 10px) 100%, 0 100%);
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
  }

  .cyber-main-button:hover {
    @apply bg-gradient-to-r from-red-500 to-red-600 transform scale-105;
    box-shadow: 0 0 30px rgba(239, 68, 68, 0.8);
    text-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
  }

  .cyber-main-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .cyber-main-button:hover::before {
    left: 100%;
  }

  @keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 5px rgba(34, 211, 238, 0.5); }
    50% { box-shadow: 0 0 20px rgba(34, 211, 238, 0.8); }
  }

  .animate-pulse-glow {
    animation: pulse-glow 2s infinite;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const enBtn = document.getElementById('en-btn');
    const jaBtn = document.getElementById('ja-btn');
    const enMessage = document.getElementById('en-message');
    const jaMessage = document.getElementById('ja-message');

    function switchLanguage(activeBtn, inactiveBtn, showMessage, hideMessage) {
      showMessage.classList.remove('hidden');
      hideMessage.classList.add('hidden');
      activeBtn.classList.add('cyber-button-active');
      inactiveBtn.classList.remove('cyber-button-active');
    }

    enBtn.addEventListener('click', function() {
      switchLanguage(enBtn, jaBtn, enMessage, jaMessage);
    });

    jaBtn.addEventListener('click', function() {
      switchLanguage(jaBtn, enBtn, jaMessage, enMessage);
    });

    // Add some dynamic effects
    setInterval(() => {
      const elements = document.querySelectorAll('.animate-pulse');
      elements.forEach(el => {
        el.style.opacity = Math.random() > 0.5 ? '1' : '0.7';
      });
    }, 2000);
  });
</script>
