<!-- app/views/errors/index.html.erb -->
<div class="min-h-screen bg-black text-cyan-400 overflow-hidden relative">
  <!-- Background Grid Pattern -->
  <div class="absolute inset-0 opacity-20">
    <div class="grid-pattern"></div>
  </div>
  
  <!-- Animated Circuit Lines -->
  <div class="circuit-lines"></div>
  
  <!-- Header Section -->
  <div class="relative z-10 pt-8">
    <!-- Top Status Bar -->
    <div class="flex justify-between items-center px-8 py-4 border-b border-cyan-500 bg-black bg-opacity-80">
      <div class="flex items-center space-x-4">
        <div class="w-3 h-3 bg-cyan-400 rounded-full animate-pulse"></div>
        <span class="font-mono text-xs tracking-widest">SYSTEM ACTIVE</span>
      </div>
      <div class="font-mono text-xs tracking-widest text-cyan-300">
        GOOD LUCK TO YOU!
      </div>
    </div>

  <!-- Main Title Section -->
    <div class="container mx-auto px-8 py-12">
      <div class="text-center mb-12">
        <h1 class="text-6xl font-bold mb-4 text-cyan-400 font-mono tracking-wider">
          <%= @app_title || "Errorい人" %>
        </h1>
        <p class="text-xl text-cyan-300 font-mono">
          <%= @app_subtitle || "エラーを出しても生きてるだけで偉い" %>
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="max-w-md mx-auto space-y-6">
        <!-- エラーを引くボタン -->
        <div class="text-center">
          <%= form_with url: result_errors_path, method: :post, local: true, class: "w-full" do |f| %>
            <%= f.submit "エラーを引く", 
                class: "w-full bg-cyan-500 hover:bg-cyan-400 text-black font-bold py-4 px-8 rounded-lg transition-all duration-300 text-xl font-mono tracking-wider transform hover:scale-105 shadow-lg shadow-cyan-500/50" %>
          <% end %>
        </div>

        <!-- 言語切り替えボタン -->
        <div class="text-center">
          <%= form_with url: toggle_language_errors_path, method: :get, local: true, class: "w-full" do |f| %>
            <%= f.submit "言語切り替え", 
                class: "w-full bg-transparent border-2 border-cyan-500 hover:bg-cyan-500 hover:text-black text-cyan-400 font-bold py-3 px-6 rounded-lg transition-all duration-300 font-mono tracking-wider" %>
          <% end %>
        </div>

        <!-- 現在の言語表示 -->
        <div class="text-center mt-8">
          <div class="inline-block bg-gray-900 border border-cyan-500 rounded-lg px-4 py-2">
            <p class="text-sm text-cyan-300 font-mono">
              CURRENT LANGUAGE: <span class="text-cyan-400 font-bold"><%= session[:language] || 'JAPANESE' %></span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>